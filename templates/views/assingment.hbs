  [class^="todo__category"] {
    font-size: 1.5rem;
    text-transform: uppercase;
    padding: 0.6rem;
    color: white;
    position: absolute;
    right: 2rem;
    top: 1.15rem;
  }
  
  /* for selecting elements whose class attribute is todo__description */
  .todo__dueDate {
    display: block;
    margin-left: 2rem;
    margin-top: 1rem;
