<section class="container">
        <h1 align="center">Assingment</h1>

            <!-- form to create task -->
        <form action="/create-task" method="POST">

            <table class="table">
                <thead>
                  <tr class="table-active">
                    <th >Add Assingment</th>
                    <th >subject</th>
                    <th >date</th>
                    <th ></th>
                  </tr>
                </thead>
            
            
                <tbody>
                    <tr>
                      <td> <input type="text" name="description"placeholder="What do you need to do?" required></input></th>
                      <td >  <select name="subject" required>

                        <option>DAA</option>
                        <option>computer-network</option>
                        <option>probability</option>
                        <option>DBMS</option>
                        <option>JAVA</option>
                        <option>SOCIAL NETWORK ANALYSIS</option>
                        <option>DATA MINNING</option>
                        <option>SOFTWARE ENGINEERING</option>
                        <option>MARKETING</option>

                    </select></th>
                      <td > <input type="date" name="date" required></th>
                      <td ><input type="submit"  class="btn btn-success"id="add" value="ADD TASK"></th>
                    </tr>
                </tbody>
            
            </table>
                  
  </form>
    </section>
        <div>          
                <h1 align="center">TASKS LIST</h1>

                <form action="/delete-task" method="GET">
                    <table class="table">
                        <thead>
                            <tr>
                              <th>Select</th>
                              <th>Assingment</th>
                              <th>Subject</th>
                            <th>due date</th>
                            </tr>
                          </thead>
                        {{#each x }}
                            

<tr>

                               <td> <input type="checkbox" name="{{ _id }}" ></td>
                               <td> <p id="task-description">{{description }}</td>
                                <td><p id="task-category"></p> {{ subject }}</td>
                                <td><p id="due-date"> {{ date }}</p></td>
</tr>
                    

                        {{/each}}
                            
                

                           
</table>
<div  align = "center"><input type="submit" class="btn btn-danger" value="DELETE TASK">
                </div></form>

        
