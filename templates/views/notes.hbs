    <style>
@import url("https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Work+Sans:wght@400;500;600;700&display=swap");

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-family: "Work Sans", sans-serif;
}

html {
  font-size: 62.5%;
  /* 1rem = 10px */
  overflow-x: hidden;
}

body {
   background: url('css/bg1.jpg') no-repeat center center fixed;
  overflow-x: hidden;
}

.header {
  padding: 0 4.8rem;
  height: 10rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgb(40, 38, 38);
  box-shadow: rgba(0,0,0,0.05)  0px 8px 8px -6px;

}

.header .logo {
  height: 3rem;
  color: #e7f5ff;
 font-size: 20px;
}

.navbar-list {
  display: flex;
  gap: 4.8rem;
  list-style: none;
  
}

.navbar-link:link,
.navbar-link:visited {
  display: inline-block;
  text-transform: uppercase;
  text-decoration: none;
  font-size: 2rem;
  font-weight: 500;
  color:whitesmoke;
  transition: all 0.3s;
}


.navbar-link:active {
  color:black;
}
.link{
  text-transform: uppercase;
  text-decoration: none;
  font-size: 5rem;
  font-weight: 500;
  color:rgb(38, 35, 35);
  transition: all 0.3s;
}

.mobile-navbar-btn {
  display: none;
  background: transparent;
  cursor: pointer;
  
}

.mobile-nav-icon {
  width: 4rem;
  height: 4rem;
  color:whitesmoke;
  
}

.mobile-nav-icon[name="close-outline"] {
  display: none;
}

/* ===========================================
Hero and Service Section Start
======================================= */
.section-hero,
.section-services {
  padding: 9.6rem 0;
  background-color: #0b3c61;
  height: 64vh;

  display: flex;
  justify-content: center;
  align-items: center;
   margin:37px;
    border-radius: 10px;
    margin-right: 62px;
    /* transform:translate(-50%,-50%); */
    background: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3));
    /* box-shadow: 0 2.8px 2.2px rgba(0,0,0,0.034),0 6.7px 5.3px rgba(0,0,0,0.048),0 12; */
    box-shadow: 7px 7px 60px purple;
    margin-top: 107px;
}

.section-services {
height: 21vh;
    margin-top: 36px;
}

.section-hero p,
.section-services p {
  font-size: 3.2rem;
  color: aliceblue;
}

.items{
            width:200px;
            height:200px;
         border: 2px solid black;
          margin:10px;
          padding:3px; 
          background: radial-gradient(white, transparent);
              border-radius: 11px;
        }
/* ===========================================
Responsive Codes 
======================================= */

/* 980px  */
@media (max-width: 62em) {
  .mobile-navbar-btn {
    display: block;
    z-index: 999;
    color:whitesmoke;
  }

  .header {
    position: relative;
  }

  .header .logo {
    width: 40%;
  }

  .navbar {
    /* display: none; */
    width: 100%;
    height: 100vh;
    
    position: absolute;
    top: 0;
    left: 0;

    display: flex;
    justify-content: center;
    align-items: center;

    /* to get the tranisition  */
    transform: translateX(100%);
    transition: all 0.5s linear;
    background:linear-gradient(to left,#74ebd5,#9face6);

/*
background: linear-gradient(90deg,
    rgba(255, 222, 0, 0) 100%,
     rgba(255, 202, 2, 0.047) 95%,
      rgba(255, 172, 5, 0.145) 90%,
       rgba(255, 168, 5, 0.25) 85%,
         rgba(255, 150, 6, 0.35) 79%,  
          rgba(255, 145, 7, 0.45) 72%,
           rgba(255, 140, 7, 0.55) 64%,
             rgba(255, 125, 8, 0.65) 55%,
              rgba(255, 113, 9, 0.753) 47%,
              rgba(255, 103, 10, 0.855) 37%,
                rgba(255, 98, 11, 0.953) 27%, 
                 rgba(255, 91, 11, 0.973) 15%, 
                  rgb(255, 89, 11) 0%);   */
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .navbar-list {
    flex-direction: column;
    align-items: center;
    color: #e7f5ff;
  }

  .active .navbar {
    transform: translateX(0);
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
    

  }
  .active .navbar-link{
    color:black;
  }

  .active .mobile-navbar-btn .mobile-nav-icon[name="close-outline"] {
    display: block;
  }

  .active .mobile-navbar-btn .mobile-nav-icon[name="menu-outline"] {
    display: none;
  }
}

/* Below 560px  */
@media (max-width: 35em) {
  .header {
    padding: 0 2.4rem;
  }

  .header .logo {
    width: 60%;
  }
}
